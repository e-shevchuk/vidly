@model vidly.Models.Movie

<h2>@Model.Name</h2>


<ul>
    <li>Genre: @Model.Genre.Name</li> 
    @if (Model.ReleaseDate.HasValue)
    {
        <li>Release date: @Model.ReleaseDate.Value.ToString("yyy-MM-dd")</li> 
    }
    @if (Model.AddedDate.HasValue)
    {
        <li>Date added: @Model.AddedDate.Value.ToString("yyy-MM-dd")</li> 
    }
    <li>Number in Stock: @Model.NumberInStock.ToString()</li> 
</ul>
